---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import SlideIn from "@/components/animations/SlideIn";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<a href={project.data.url} class="text-white no-underline">
  <div
    class="flex gap-0 rounded-md border-opacity-0 bg-[#f5f5f5] p-4 drop-shadow-sm transition duration-300 ease-in-out hover:bg-[#ffffff] hover:drop-shadow-md dark:bg-[#0f0f0f] dark:hover:bg-[#171717]"
  >
    <SlideIn client:load>
      <div>
        <li>
          <div class="flex flex-col">
            <p class="pb-1 text-lg font-bold text-black dark:text-white">
              {project.data.title}
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-300">
              {project.data.description}
            </p>
            <div class="mt-2">
              {
                project.data.tags && (
                  <div class="flex flex-wrap gap-2">
                    {project.data.tags.map((tag: any) => (
                      <span class="rounded-md border bg-[#f5f5f5] px-[0.4rem] py-[0.2rem] text-sm text-gray-500 drop-shadow-sm dark:border-0 dark:bg-[#191919] dark:text-gray-400 dark:drop-shadow-none">
                        {tag}
                      </span>
                    ))}
                  </div>
                )
              }
            </div>
          </div>
        </li>
      </div>
    </SlideIn>
  </div>
</a>
