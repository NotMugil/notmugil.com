---
import { formatDate } from "@/lib/util";

const { post } = Astro.props;
---

<li class="flex flex-col py-2 no-underline border-t border-b border-opacity-0 border-white">
  <a href={`/blog/${post.slug}`} class="text-white no-underline">
    <div class="flex flex-col md:flex-row justify-between lg:gap-8">
      <div>
        <span>{post.data.title}</span>
      </div>
      <div class="text-gray-500 whitespace-nowrap text-sm md:text-md">
        {formatDate(post.data.publicationDate)}
      </div>
    </div>
  </a>
</li>
