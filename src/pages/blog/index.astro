---
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";

import Post from "@/components/Post.astro";
import SeoPage from "@/components/SeoPage.astro";

const posts = (await getCollection("blog")).sort(
  (a: { data: { publicationDate: number; }; }, b: { data: { publicationDate: number; }; }) => b.data.publicationDate.valueOf() - a.data.publicationDate.valueOf(),
);
---

<Layout>
  <SeoPage slot="head" title="Blog" />
  <div class="mb-6">
    <h2 class="text-2xl font-bold">Personal Blog</h2>
    <p class="text-gray-400 text-sm">Just me yapping about random stuffs on the internet.</p>
  </div>
    <!-- <hr class="my-8 border-[1px] opacity-10" /> -->
  <ul class="grid list-none gap-4 p-0">
    {posts.map((post: any) => <Post post={post} />)}
  </ul>

  <div class="my-10 flex flex-col">
    <h2 class="py-2 text-2xl font-bold">Newsletter</h2>
    <p class="text-gray-400 text-sm">If you enjoy my posts, why not stay in the loop? Subscribe for the latest stories, personal insights, and a peek into my world—all delivered right to your inbox. Can’t wait to share more with you!</p>

    <div class="relative">
      <form action="#" method="POST" class="flex">
        <input type="email" placeholder="enter your email" class="w-full my-6 flex px-4 py-2 border border-white border-opacity-5 bg-[#171717] rounded-md focus:outline-none">
        <button type="submit" class="absolute right-0 top-0 h-full"> <span class="px-3 py-2 mr-1 bg-[#0a0a0a] bg-opacity-85 hover:bg-opacity-100 transition duration-200 ease-in-out rounded text-sm font-bold">Subscribe</span></button>
      </form>
    </div>
  </div>

</Layout>
