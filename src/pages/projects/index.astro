---
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";

import Project from "@/components/Project.astro";
import SeoPage from "@/components/SeoPage.astro";

const projects = await getCollection("projects");
---

<Layout>
  <SeoPage slot="head" title="Projects" />
  <h2 class="mb-3 text-4xl font-bold">Projects</h2>
  <p class="mb-6 text-gray-400"> Projects that I've developed or contributed to. </p>
  <!-- <hr class="my-8 border-[1px] opacity-5" /> -->
  <ul class="grid grid-cols-1 md:grid-cols-2 list-none gap-2 p-0">
    {projects.map((project: any) => <Project project={project} />)}
  </ul>
</Layout>
